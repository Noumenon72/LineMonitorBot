<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ParentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="2" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_gross_width"
                style="@style/Label.FirstTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gross width" />

            <EditText
                android:id="@+id/edit_gross_width"
                style="@style/EditText.SecondTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="numberDecimal"
                android:maxLength="5" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_edge_trim_percent"
                style="@style/Label.FirstTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edge trim" />

            <TextView
                android:id="@+id/txt_edge_trim_percent"
                style="@style/Label.SecondTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_sheet_weight"
                style="@style/Label.FirstTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sheet weight" />

            <EditText
                android:id="@+id/edit_sheet_weight"
                style="@style/EditText.SecondTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="numberDecimal"
                android:maxLength="5" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_net_pph"
                style="@style/Label.FirstTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net pph" />

            <TextView
                android:id="@+id/txt_net_pph"
                style="@style/Label.SecondTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_gross_pph"
                style="@style/Label.FirstTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gross pph" />

            <TextView
                android:id="@+id/txt_gross_pph"
                style="@style/Label.SecondTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_novatec_setpoint"
                style="@style/Label.FirstTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova setpt" />

            <EditText
                android:id="@+id/edit_novatec_setpoint"
                style="@style/EditText.SecondTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:text="0" />

        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_color_percent"
                style="@style/Label.FirstTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color letdown"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txt_color_percent"
                style="@style/Label.SecondTableColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:gravity="right"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_calculate_rates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculate Rates" />
            </LinearLayout>

        </TableRow>

    </TableLayout>
        
</LinearLayout>
