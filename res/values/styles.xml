<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
     </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:editTextStyle">@style/EditText</item>
    </style>
    
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#1964DE</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Button.Minor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Button.RollMath">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_roll_math_buttons</item>
        <item name="android:layout_marginBottom">@dimen/margin_roll_math_buttons_bottom</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#1964DE</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minEms">2</item>
    </style>

    <style name="Spinner" parent="@android:attr/spinnerItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Sienna</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="ParentFragment">
        <item name="android:paddingTop">@dimen/fragment_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/fragment_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/fragment_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/fragment_horizontal_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="ParentFragment.VerticallyDivided">
        <item name="android:divider">?android:attr/dividerHorizontal</item>
        <item name="android:dividerPadding">@dimen/fragment_divider_padding</item>
        <item name="android:showDividers">middle|end</item>
    </style>
    
    <style name="Label" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="Label.FirstTableColumn">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.35</item>
        <item name="android:minHeight">@dimen/label_row_height</item>
        <item name="android:paddingRight">@dimen/table_column_padding</item>
    </style>

    <style name="Label.SecondTableColumn">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:minHeight">@dimen/label_row_height</item>
    </style>

    <style name="EditText.SecondTableColumn">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:minHeight">@dimen/label_row_height</item>
        <item name="android:ems">5</item>
    </style>

    <style name="BlankThirdColumn">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.15</item>
    </style>
    
    <style name="ThirdColumn">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="BlankThirdColumn.Unused">
        <item name="android:layout_weight">0.0</item>
    </style>

    
    <style name="Label.TwoColumns">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:minHeight">@dimen/label_row_height</item>
    </style>
    
    <style name="EditText.TwoColumns">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/edit_six_ems_width</item>
        <item name="android:minHeight">@dimen/label_row_height</item>
    </style>
    
    <style name="TwoColumns">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:minHeight">@dimen/label_row_height</item>
    </style>

    <style name="TwoColumns.MutuallyExclusive">
    	<item name="android:paddingTop">8dp</item>
    	<item name="android:paddingBottom">8dp</item>
    	<item name="android:clickable">true</item>    
    	<item name="android:focusableInTouchMode">true</item>    
    	<item name="android:focusable">true</item>
    	<item name="android:background">@drawable/selector_viewgroup_exclusive</item>    	    
    </style>
    
    <style name="Hint">
		<item name="android:textColor">@color/SlateGray</item>
		<item name="android:textStyle">italic</item>
    </style>
    
    <style name="Hint.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="EditText.HopperPercent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">4</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
</resources>
